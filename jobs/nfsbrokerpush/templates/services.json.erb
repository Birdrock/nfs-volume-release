<%=
  config = []
  p("nfsbrokerpush.services").each do |service|
    plans = []
    service["plans"].each do |plan|
      costs = plan["metadata"] ? plan["metadata"]["costs"] : []
      display_name = plan["metadata"] ? plan["metadata"]["display_name"] : ""

      plans << {
        "id":plan["id"],
        "name": plan["name"],
        "description": plan["description"],
        "metadata": {
          "costs": costs,
          "displayName": display_name
        }
      }
    end

    display_name = plan["metadata"] ? plan["metadata"]["display_name"] : ""
    image_url = plan["metadata"] ? plan["metadata"]["image_url"] : ""
    long_description = plan["metadata"] ? plan["metadata"]["long_description"] : ""
    provider_display_name = plan["metadata"] ? plan["metadata"]["provider_display_name"] : ""
    documentation_url = plan["metadata"] ? plan["metadata"]["documentation_url"] : ""

    config << {
      "id": service["id"],
      "name": service["name"],
      "description": service["description"],
      "bindable": service["bindable"],
      "plan_updateable": service["plan_updatable"],
      "tags": service["tags"],
      "plans": plans,
      "requires": service["requires"],
      "metadata": {
        "displayName": display_name,
        "imageUrl": image_url,
        "longDescription": long_description,
        "providerDisplayName": provider_display_name,
        "documentationUrl": documentation_url
      }
    }
  end

  require 'json'
  JSON.dump(config)
%>
