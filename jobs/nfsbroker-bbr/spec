  nfsbroker.db_hostname:
    default: ""
    description: "[DEPRECATED] (optional) database hostname when using SQL to store broker state"
  nfsbroker.db_port:
    default: ""
    description: "[DEPRECATED] (optional) database port when using SQL to store broker state"
  nfsbroker.db_name:
    default: ""
    description: "[DEPRECATED] (optional) database name when using SQL to store broker state"
